    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test",
                "-v"
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "host": "127.0.0.1",
                "user": "root",
                "password": "rootpwd",
                "port": "1025"
            }
        },
        {
            "name": "Python: main",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "env": {}
        }
    ]
}